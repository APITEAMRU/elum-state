{
  "author": {
    "name": "Artur Frank",
    "url": "https://vk.com/gmelum"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GMELUM/elum-state.git"
  },
  "scripts": {
    "build": "tsc && cp -r static/* ./dist",
    "minify": "jsmin -o ./dist/index.min.js ./dist/index.js",
    "start": "yarn build && cross-env NODE_PATH=./dist nodemon",
    "release": "git subtree push --prefix dist https://github.com/GMELUM/elum-state release",
    "test": "jest --config jest.config.json"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "index.ts"
    ],
    "ext": "ts",
    "exec": "tsc && ts-node index.ts"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.1",
    "@types/jest": "^28.1.4",
    "benchmark": "^2.1.4",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "jsmin": "^1.0.1",
    "minify": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}